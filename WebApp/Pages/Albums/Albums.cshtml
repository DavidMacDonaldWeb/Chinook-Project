@page
@model UWS.Shared.AlbumsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Albums Index";
}

<h2>Albums</h2>
<p>
    <a class = "btn btn-primary" href="../index">Home</a>
    <a class = "btn btn-primary" href="/Artists/artists">Artists</a>
    <a class = "btn btn-primary" href="Tracks">Tracks</a>
</p>
<p>
    <a asp-page="CreateAlbum">Create New Album</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("AlbumID")
            </th>
            <th>
                @Html.DisplayName("Title")
            </th>
            <th>
                @Html.DisplayName("Artist Name")
            </th>
            <th>Edit | Details | Delete</th>
        </tr>
    </thead>

   <tbody>
    @foreach (var item in Model.Albums)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                <a class="href" asp-page="./EditAlbum" asp-route-id="@item.AlbumID">Edit</a> |
                <a class="href" asp-page="./AlbumDetails" asp-route-id="@item.AlbumID">Details</a> |
                <a class="href" asp-page="./Albums" onclick="return confirm('Are you sure you want to delete this Album?');"
                asp-page-handler="Delete" asp-route-id="@item.AlbumID">Delete</a>
            </td>
        </tr>
        
    }
    </tbody>

</table>