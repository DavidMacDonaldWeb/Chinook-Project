@page
@model UWS.Shared.TracksModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Track-List";
}
<h2>Tracks</h2>
<p>
   <a class = "btn btn-primary" href="../index">Home</a>
   <a class = "btn btn-primary" href="/Artists/artists">Artists</a>
   <a class = "btn btn-primary" href="/Albums/albums">Albums</a>
</p>
<p>
   <a asp-page="CreateTrack">Enter Track details</a>
</p>
<table class="table">
   <thead>
      <tr>
         <th>
            @Html.DisplayName("TrackID")
         </th>
         <th>
            @Html.DisplayName("Name")
         </th>
         <th>
            @Html.DisplayName("AlbumID")
         </th>
         <th>
            @Html.DisplayName("MediaTypeID")
         </th>
         <th>
            @Html.DisplayName("GenreID")
         </th>
         <th>
            @Html.DisplayName("Composer")
         </th>
         <th>
            @Html.DisplayName("Milliseconds")
         </th>
         <th>
            @Html.DisplayName("Bytes")
         </th>
         <th>
            @Html.DisplayName("UnitPrice")
         </th>
         <th>Edit | Details | Delete</th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model.TrackList)
      {
      <tr>
         <td>
            @Html.DisplayFor(modelItem => item.TrackID)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Name)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.AlbumID)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.MediaTypeID)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.GenreID)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Composer)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Milliseconds)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Bytes)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
         </td>
         <td>
            <a class="href" asp-page="./EditTrack" asp-route-id="@item.TrackID">Edit</a> |
            <a class="href" asp-page="./TrackDetails" asp-route-id="@item.TrackID">Details</a> |
            <a class="href" asp-page="./Tracks" onclick="return confirm('Are you sure you want to delete this Track?');"
               asp-page-handler="Delete" asp-route-id="@item.TrackID">Delete</a>
         </td>
      </tr>
      }
   </tbody>
</table>