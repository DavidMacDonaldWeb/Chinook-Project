@page
@model UWS.Shared.ArtistDetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Artist-Details";
}

<h3>Artist Details</h3>

<div>
    <h4>@Html.DisplayFor(model => model.Artist.Name)</h4>
    <hr />
    <dl class="row">
        <dt>
            @Html.DisplayNameFor(model => model.Artist.Albums)
        </dt>
    
        <dd class="col-sm-10">
            <table class="table">
                @foreach (var item in Model.Artist.Albums)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" href="Artists">Artists Page</a>
</div>
