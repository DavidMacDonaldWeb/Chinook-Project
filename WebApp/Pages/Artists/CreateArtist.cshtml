@page
@model UWS.Shared.CreateArtistModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Artist";
}
<div class="container">
   <h3>Add Artist</h3>
   <hr />
   <br />
   <form method="POST">
      <div class="row">
         <div class="col-md-4">
            <label asp-for="Artist.Name"></label>
            <input asp-for="Artist.Name" class="form-control"/>
            <span class="alert-danger" asp-validation-for="Artist.Name"></span>
         </div>
      </div>
      <br />
      <input type="submit" value="Save" class="btn btn-primary"/>
      <a class="btn btn-primary" href="Artists">Cancel</a>
   </form>
</div>
